<!-- Local stylesheet -->
    <link rel="stylesheet" href="/assets/css/recipe.css">
</head>
<body>
  <header>
    <nav class="navbar navbar-expand-lg navbar-dark ">
      <h1 class="display-2 animate__animated animate__fadeInLeft"><a class="nav-link" href="/">SEARED</a></h1>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item active">
            <a class="nav-link" id="logout">Log Out <span class="sr-only"></span></a>
          </li>
          <li class="nav-item active">
            <a class="nav-link" href="/login">Login <span class="sr-only"></span></a>
          </li>
          <li class="nav-item active">
            <a class="nav-link" href="/sign-up">Sign Up <span class="sr-only"></span></a>
          </li>
          <li class="nav-item active">
            <a class="nav-link" href="/recipe/random">Random Recipe <span class="sr-only"></span></a>
          </li>
        </ul>
      </div>
    </nav>
    </header>
    <main>
      <div class="container-fluid">
        <div class="row">
          <div class="col d-flex justify-content-center">
        <div class="card">
          <div class="card-body">
            <h1 class="card-title">{{title}}</h1>
            <h5>Time: {{time}} minutes <i class="fa-solid fa-clock"></i></h5>
            <h3>Ingredients</h3>
            <p>{{ingredients}}</p>
            <h3>Recipe</h3>
            <p>{{description}}</p>
            <form>
              <div class="form-group">
              <label for="review">Your Review:</label><br>
              <input class="form-input" type="text" id="review" />
            </div>
            <div class="form-group">
              <button class="btn" type="submit">Review <i class="fa-solid fa-comments"></i></button>
            </div>
            </form>
          </div>
          </div>
          </div>
          </div>
        </div>
        <div class="container-fluid">
          
          </div>
    </main>